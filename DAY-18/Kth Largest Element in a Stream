import java.util.PriorityQueue;

class KthLargest {
    final PriorityQueue<Integer> minHeap;
    final int k;

    public KthLargest(int k, int[] nums) {
        this.k = k;
        this.minHeap = new PriorityQueue<>();
        for (int num : nums) {
            add(num); 
        }
    }

    public int add(int val) {
        minHeap.offer(val); 
        if (minHeap.size() > k) {
            minHeap.poll(); 
        }
        return minHeap.peek(); 
    }
}